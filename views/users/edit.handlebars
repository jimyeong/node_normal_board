{{#if user}}
    <div class="row">
        <div class="col s12">
            <form action="/user/comment/edit/{{user.commentId}}?_method=put" method="post">
                <div class="row">
                    <div class="input-field col s12">
                        <h3>author: {{user.name}}</h3>
                    </div>
                    <div class="input-field col s12">
                        <label for="comment">코멘트</label>
                        <input type=text name="comment" value="{{user.comment}}" class="autocomplete">
                    </div>
                </div>
                <input type="submit" class="btn" value="확인">
            </form>
        </div>
    </div>
    {{else}}
    <p>Wrong access!</p>
{{/if}}